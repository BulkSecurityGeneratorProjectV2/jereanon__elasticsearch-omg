<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <context:annotation-config/>

    <bean id="exampleBusinessProcess" class="org.elasticsearch.omg.samples.ExampleBusinessRunner" />
    <bean class="org.elasticsearch.omg.support.springframework.ElasticSearchLocalClientFactory" />
    <bean name="abstractElasticSearchRepository"
            class="org.elasticsearch.omg.support.repository.ElasticSearchRepository">
        <property name="bulkSize" value="50" />
        <property name="indexName" value="testing" />
    </bean>

